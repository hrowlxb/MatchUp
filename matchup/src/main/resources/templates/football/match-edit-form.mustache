{{> layout/header }}

<main>
    <h2>매치 수정</h2>

    <form method="post" action="/matches/{{match.id}}/edit">
        <label for="title">제목</label>
        <input type="text" id="title" name="title" value="{{match.title}}" required />

        <label for="location">장소</label>
        <input type="text" id="location" name="location" value="{{match.location}}" required />

        <label for="matchTime">시간</label>
        <input type="datetime-local" id="matchTime" name="matchTime" value="{{match.matchTime}}" required />

        <label for="maxPlayers">최대 인원</label>
        <input type="number" id="maxPlayers" name="maxPlayers" value="{{match.maxPlayers}}" min="1" required />

        <button type="submit">수정하기</button>
    </form>

    <form method="post" action="/matches/{{match.id}}/delete" style="margin-top: 1rem;">
        <button type="submit" onclick="return confirm('정말 삭제하시겠습니까?')">삭제하기</button>
    </form>

    <a href="/matches" class="btn-back">← 매치 목록으로</a>
</main>

{{> layout/footer }}
